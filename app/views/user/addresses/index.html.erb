<h1>登録住所一覧ページ</h1>

<% @addresses.each do |address| %>
  <p>受取人：<%= address.receiver %></p>
  <p>
    住所：〒<%= address.postal_code %><br>
    　　　　<%= address.prefecture %><br>
    　　　　<%= address.city %><br>
    　　　　<%= address.after %>
  </p>
  <p><%= link_to "編集", edit_address_path(address) %></p>
  <p><%= link_to "削除", address_path(address), method: :delete %></p>
<% end %>